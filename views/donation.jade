include ./header.jade
div.name-container.left
  h4 Add donation from #{fullName}
  form(action='/#{name}/donation',method='post')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='date') date
             input(id='date',type='date',value='',placeholder='10/27/1981',name='date')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='amount') amount
             input(id='amount',type='text',value='',placeholder='100.00',name='amount')
      div(id='hiddendiv',data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='method') method of payment
             input(id='method',type='text',value='',placeholder='check',name='method')
      div(data-role='fieldcontain')
        input(type='submit',value='Add Donation',data-transition='fade', data-theme='c')
  table(style='width:100%')
    thead
      th First Name
      th Last Name
      th email
      th Affiliation
    tbody
      tr
        td #{rows.FirstName}
        td #{rows.LastName}
        td #{rows.email}
        td #{rows.Affiliation}
  table(style='width:100%')
    thead
      th Date of Donation
      th Amount of Donation
      th Method of Donation
    tbody
    -var i = data
    each value in i
      tr
        td #{value.Date}
        td #{value.amount}
        td #{value.method}
  table(style='width:100%')
    thead
      th total donations
    tbody
      tr
        td #{total}
include ./footer.jade


