include ./header.jade
div.container
  div.container
    div.container
      h5.col-md-4
        a(href='/#{pass}') Back to #{fullName}'s contact page
      h3.col-md-3.top-header Add Volunteer
    form.donation-form(action='/#{name}/donation',method='post')
        div.col-md-3(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='date') date of service
               input(id='date',type='date',value='',placeholder='10/27/1981',name='Date')
        div.col-md-3(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='amount') Hours Worked
               input(id='amount',type='text',value='',placeholder='100.00',name='Hours')
        div.col-md-3(id='hiddendiv',data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='method') Department
               input(id='method',type='text',value='',placeholder='check',name='Department')
        div.col-md-3.donation-btn(data-role='fieldcontain')
          input(type='submit',value='Add Donation',data-transition='fade', data-theme='c')
      h3.col-md-3.col-md-offset-4.title Volunteer History
    table.donation-table.table-bordered.table-striped(style='width:100%')
      thead
        th Date of Service
        th Hours of Service
        th Department
      tbody
      -var i = data
      each value in i
        tr
          td #{value.Date}
          td #{value.Hours}
          td #{value.Department}
    table(style='width:95%')
      thead
        th Total Hours
      tbody
        tr
          td #{total}

include ./footer.jade
